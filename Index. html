<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>For Karan ‚ù§Ô∏è</title>

    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #ffeef2;
            font-family: 'Arial', sans-serif;
            text-align: center;
            overflow: hidden;
            margin: 0;
            transition: background 0.6s ease;
        }

        h1 {
            color: #d63384;
            font-size: 2.5rem;
            padding: 20px;
            z-index: 5;
        }

        .buttons {
            margin-top: 20px;
            position: relative;
            width: 100%;
            max-width: 360px;
            height: 160px;
        }

        button {
            padding: 15px 30px;
            font-size: 1.2rem;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: 0.3s;
        }

        #yesBtn {
            background-color: #ff4d6d;
            color: white;
            position: relative;
            z-index: 10;
        }

        #noBtn {
            background-color: #ffffff;
            color: #d63384;
            position: absolute;
            border: 2px solid #d63384;
            left: 60%;
            top: 70px;
        }

        .hidden {
            display: none;
        }

        #response-msg {
            color: #d63384;
            font-weight: bold;
            margin-bottom: 10px;
            height: 22px;
        }

        /* ‚ù§Ô∏è Hearts */
        .heart {
            position: fixed;
            bottom: -20px;
            font-size: 24px;
            animation: floatUp 4s linear forwards;
            opacity: 0.8;
        }

        @keyframes floatUp {
            from {
                transform: translateY(0) scale(1);
                opacity: 1;
            }
            to {
                transform: translateY(-100vh) scale(1.5);
                opacity: 0;
            }
        }

        /* üéÜ Firecracker */
        .cracker {
            position: fixed;
            width: 8px;
            height: 8px;
            background: red;
            border-radius: 50%;
            animation: explode 1s ease-out forwards;
        }

        @keyframes explode {
            to {
                transform: translate(var(--x), var(--y)) scale(0);
                opacity: 0;
            }
        }
    </style>
</head>

<body>

    <div id="question-page">
        <div id="response-msg"></div>
        <h1>Hi Karan üíñ Will you be my Valentine?</h1>

        <div class="buttons">
            <button id="yesBtn">Yes!</button>
            <button id="noBtn">No</button>
        </div>
    </div>

    <div id="celebration" class="hidden">
        <h1>Yay! I knew you'd say yes! ü•≥üíñ</h1>
        <p style="font-size: 1.5rem;">Best decision ever üòå</p>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const msg = document.getElementById('response-msg');
        const questionPage = document.getElementById('question-page');
        const celebration = document.getElementById('celebration');

        const noTexts = [
            "Are you sure?",
            "Really??",
            "Think again...",
            "Nice try! üòâ",
            "No escape!",
            "Still no? ü•∫",
            "Wait‚Ä¶ are you serious?"
        ];

        let textIndex = 0;

        function moveButton() {
            noBtn.innerText = noTexts[textIndex];
            textIndex = (textIndex + 1) % noTexts.length;

            const container = document.querySelector('.buttons');
            const rect = container.getBoundingClientRect();

            const x = Math.random() * (rect.width - noBtn.offsetWidth);
            const y = Math.random() * (rect.height - noBtn.offsetHeight);

            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;

            msg.innerText = "Haha, nope! üòú";
        }

        noBtn.addEventListener('mouseover', moveButton);
        noBtn.addEventListener('click', moveButton);
        noBtn.addEventListener('touchstart', moveButton);

        /* ‚ù§Ô∏è Hearts */
        function createHeart() {
            const heart = document.createElement("div");
            heart.className = "heart";
            heart.innerText = "‚ù§Ô∏è";
            heart.style.left = Math.random() * 100 + "vw";
            heart.style.fontSize = (20 + Math.random() * 20) + "px";
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 4000);
        }

        /* üéÜ Firecracker */
        function firecracker(x, y) {
            for (let i = 0; i < 20; i++) {
                const spark = document.createElement("div");
                spark.className = "cracker";
                spark.style.left = x + "px";
                spark.style.top = y + "px";
                spark.style.setProperty("--x", (Math.random() * 200 - 100) + "px");
                spark.style.setProperty("--y", (Math.random() * 200 - 100) + "px");
                spark.style.background =
                    `hsl(${Math.random() * 360}, 100%, 60%)`;
                document.body.appendChild(spark);
                setTimeout(() => spark.remove(), 1000);
            }
        }

        yesBtn.addEventListener('click', () => {
            questionPage.classList.add('hidden');
            celebration.classList.remove('hidden');

            document.body.style.background =
                "linear-gradient(135deg, #ff9a9e, #fad0c4)";

            // Start hearts
            setInterval(createHeart, 300);

            // Firecrackers burst
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    firecracker(
                        Math.random() * window.innerWidth,
                        Math.random() * window.innerHeight
                    );
                }, i * 300);
            }
        });
    </script>

</body>
</html>
